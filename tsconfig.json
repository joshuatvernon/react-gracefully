{
  "compilerOptions": {
    "types": [
      "enzyme",
      "@wojtekmaj/enzyme-adapter-react-17",
      "express",
      "react",
      "react-dom",
      "jest",
      "@emotion/jest"
    ],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "lib",
    "badges",
    "coverage",
    "node_modules",
    // Tests
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    // Storybook
    ".awcache",
    ".storybook",
    "src/storybook.tsx",
    "src/**/stories.tsx"
  ]
}
