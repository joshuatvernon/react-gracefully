{
  "name": "react-gracefully",
  "version": "0.3.2",
  "description": "A utility for gracefully rendering responsive react code server side",
  "keywords": [
    "react",
    "responsive",
    "react-responsive",
    "gracefully",
    "grace",
    "ssr",
    "server-side",
    "server",
    "side",
    "render",
    "useGrace",
    "GraceProvider",
    "react-gracefully"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/joshuatvernon/react-gracefully.git"
  },
  "license": "MIT",
  "author": "Joshua Vernon",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf ./lib ./coverage",
    "cli": "cbf -j prebuild,cli,cli:docs,postinstall,tag:build-annotated,tag:changes-since-latest,tag:latest,tag:latest-annotated,tag:update-latest,preversion,version,postversion",
    "cli:docs": "cbf -d -j prebuild,cli,cli:docs,postinstall,tag:build-annotated,tag:changes-since-latest,tag:latest,tag:latest-annotated,tag:update-latest,preversion,version,postversion",
    "postinstall": "npm run sort",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "sort": "sort-package-json",
    "tag:build-annotated": "echo \"$(npm run --silent tag:latest-annotated)\n\n$(npm run --silent tag:changes-since-latest)\"",
    "tag:changes-since-latest": "echo \"$(git --no-pager log $(git describe --abbrev=0 --tags $(git rev-list --tags --skip=1 --max-count=1))..$(git describe --tags --abbrev=0) --no-merges --oneline --pretty=format:'- %s')\"",
    "tag:latest": "echo $(git describe --tags --abbrev=0)",
    "tag:latest-annotated": "echo $(git --no-pager log --tags -n1 --oneline --pretty=\"%s\")",
    "tag:update-latest": "git tag -f \"$(npm run --silent tag:latest)\" \"$(npm run --silent tag:latest)\"^{} -a -m \"$(npm run --silent tag:build-annotated)\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:badges": "npm run test:coverage && jest-coverage-badges --output './badges' && git add badges/* && git commit -m 'Updated test coverage badges' || printf '\n\u001b[32mTest coverage badges not updated.\u001b[0m\n\n'",
    "test:coverage:report": "npm run test:coverage && http-server -p 4001 ./coverage/lcov-report -c-1",
    "test:watch": "jest --watch",
    "preversion": "npm run lint",
    "version": "genversion --semi version.js && git add version.js",
    "postversion": "npm run test:coverage:badges && npm run --silent tag:update-latest && git push -u origin $(git rev-parse --abbrev-ref HEAD) && git push --follow-tags",
    "version:current": "echo $npm_package_version",
    "version:latest-published": "npm view react-gracefully version"
  },
  "dependencies": {
    "@emotion/react": "^11.1.2",
    "@emotion/styled": "^11.0.0",
    "express-useragent": "^1.0.15",
    "lodash.merge": "^4.6.2",
    "react-sweet-state": "^2.4.4",
    "to-px": "^1.1.0"
  },
  "devDependencies": {
    "@emotion/jest": "^11.1.0",
    "@types/enzyme": "^3.10.8",
    "@types/express": "^4.17.9",
    "@types/express-useragent": "^1.0.0",
    "@types/jest": "^26.0.16",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/to-px": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.2",
    "cbf": "^2.3.2",
    "codecov": "^3.8.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.10.0",
    "genversion": "^2.2.1",
    "http-server": "^0.12.3",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^10.5.3",
    "lodash.clonedeep": "^4.5.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sort-package-json": "^1.48.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
