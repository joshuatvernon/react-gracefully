# IDE-agnostic editor config: See https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending ever file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{ts,tsx,js,jsx}]
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2
